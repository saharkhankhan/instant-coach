
<div class="container mt-4 text-center">
<h1>Coaches</h1>
</div>


<div class="d-flex">

  <div class="container mt-4 text-center">
    <div class="row">
        <% @coaches.each do |coach|  %>
          <div class="col-4 d-flex mx-auto justify-content-center my-2">
            <div class="card" style="width: 18rem;">
              <%= cl_image_tag coach.user_image, class: "card-img-top" %>
              <div class="card-body">
                <h5 class="card-title"><%= coach.first_name.capitalize %></h5>
                <p class="card-text"><%= coach.bio %></p>
                <%= link_to "View #{coach.first_name.capitalize}", user_sessions_path(coach), class: "btn home-btn" %>
              </div>
            </div>

          </div>
        <% end %>



    </div>
      <%= link_to "Home", root_path, class: "btn btn-2" %>
  </div>

  <div
    id="map"
    style="width: 100%;
    height: 600px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY']%>">
  </div>
</div>

