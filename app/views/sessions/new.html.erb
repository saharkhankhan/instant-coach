<div class="container">
  <h1>Create A New Session <%= @coach.first_name.capitalize %></h1>

  <%= simple_form_for [@coach, @session] do |f| %>
    <div class="form-inputs">
      <%= f.input :title, label: 'Title', placeholder: 'Yoga' %>
      <%= f.input :description, label: 'Description', placeholder: 'duration / difficulty etc..' %>
      <%= f.button :submit, "Create Session", class:"btn btn-primary mb-4" %>
    </div>

  <% end %>



</div>
