<div class="container">
  <h1>Create A New Session <%= @coach.first_name.capitalize %></h1>

  <%= simple_form_for [@coach, @session] do |f| %>
    <div class="form-inputs">
    <%= f.input :duration, collection: [1, 2, 3] %>
    <%= f.association :user_sports %>
    <%= f.button :submit, "Create Session", class:"btn btn-primary mb-4" %>
    </div>

    <div class="form-actions">
    </div>
  <% end %>



</div>
