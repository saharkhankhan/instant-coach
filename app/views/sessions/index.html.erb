            <%= "ðŸ¥‡" %>
          <% end %>
        </p>
      </div>
  <div class="container d-flex mx-auto justify-content-center">
    <% @coach.coach_sessions.each do |session| %>
      <div class="col-4 d-flex mx-auto justify-content-center my-2">
        <div class="card mx-auto" style="width: 400px;">
            <div class="card-body">
              <h4 class="card-title"><%= session.title %></h4>
                    <p><%= session.description %><p>
              <%= link_to "Book this session", new_user_booking_path(@coach), class: "btn home-btn" %>
